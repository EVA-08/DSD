<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="460.0" prefWidth="410.0" xmlns="http://javafx.com/javafx/8"
            fx:controller="controller.GameHallController">
    <children>
        <TableView layoutX="117.0" layoutY="55.0" prefHeight="266.0" prefWidth="274.0">
            <columns>
                <TableColumn prefWidth="133.0" text="GameName"/>
                <TableColumn prefWidth="139.0" text="PlayerNumber"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <Button fx:id="newSessionButton" layoutX="117.0" layoutY="321.0" mnemonicParsing="false"
                onAction="#newSessionHandler" text="New Session"/>
        <AnchorPane fx:id="invitationPane" layoutX="447.0" layoutY="65.0" prefHeight="200.0" prefWidth="152.0"
                    visible="false">
            <children>
                <Button layoutX="-1.0" layoutY="175.0" mnemonicParsing="false"
                        onAction="#acceptButtonHandler" text="Accept"/>
                <TextArea fx:id="invitationTextArea" prefHeight="165.0" prefWidth="152.0" wrapText="true"/>
                <Button layoutX="96.0" layoutY="175.0" mnemonicParsing="false"
                        onAction="#refuseButtonHandler" text="Refuse"/>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
